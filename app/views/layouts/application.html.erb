<!DOCTYPE html>
<html>
  <head>
    <title>SimpleChatApplication</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <% unless current_page?(join_path) %>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">Hello, <%= current_user.username.upcase %></a>
          </div>
      </nav>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>