<div class="row">
  <% @users.each do |user| %>
    <div class="col-md-3 card mb-4 shadow-sm" id="card_<%= user.id %>">
      <%= image_tag avatar_url(user.id) %>
      <div class="card-body">
        <p class="card-text"><b><%= user.username %></b></p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <%= link_to "Message", user_path(user), class: "btn btn-success btn-outline-secondary" %>
          </div>
          <small class="text-muted"></small>
        </div>
      </div>
    </div>
  <% end %>
</div>